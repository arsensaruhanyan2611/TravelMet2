<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="arsensaruhanyan.com.travelmet.LoginActivity"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="56dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:orientation="horizontal">
                <Button android:id="@+id/link_login"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/rubik"
                    android:gravity="start|center_vertical"
                    android:text="Sign In"
                    android:textAllCaps="false"
                    android:textColor="#dde1ef"
                    android:textSize="18sp" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#C2C9DE"/>
                <TextView
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:textSize="30sp"
                    android:textColor="#C2C9DE"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:gravity="end|center_vertical"
                    android:fontFamily="@font/rubik"
                    android:text="Sign Up"/>
            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <EditText android:id="@+id/input_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/rubik"
                    android:drawableStart="@drawable/ic_avatar"
                    android:drawablePadding="15dp"
                    android:background="@drawable/rounded_view"
                    android:hint="Enter name" />
            </android.support.design.widget.TextInputLayout>
            <!-- Email Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <EditText android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/rubik"
                    android:drawableStart="@drawable/ic_mail"
                    android:drawablePadding="15dp"
                    android:background="@drawable/rounded_view"
                    android:hint="Enter e-mail" />
            </android.support.design.widget.TextInputLayout>

            <!-- Password Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <EditText android:id="@+id/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:inputType="textPassword"
                    android:fontFamily="@font/rubik"
                    android:drawableStart="@drawable/ic_locked"
                    android:drawablePadding="15dp"
                    android:background="@drawable/rounded_view"
                    android:hint="Enter Password" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <EditText android:id="@+id/input_repeat_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:inputType="textPassword"
                    android:fontFamily="@font/rubik"
                    android:drawableStart="@drawable/ic_reload"
                    android:drawablePadding="15dp"
                    android:background="@drawable/rounded_view"
                    android:hint="Repeat Password" />
            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_signup"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center"
                android:padding="12dp"
                android:background="@drawable/rounded_view"
                android:backgroundTint="@color/colorAccent"
                android:textColor="#FFF"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:fontFamily="@font/rubik"
                android:text="Sign up"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>